/////////////////////////////////////////////////////////////////////////////
///
/// @param  filename   [IN] - file name to check
///
/// @return bool - true we load this type of file, else false
///
/// @brief
/// Check to see if thos class can load the passed in file
///
/////////////////////////////////////////////////////////////////////////////
bool cWordstarFile::CheckType(QString filename)
{
    QString path, file, ext;
    QFileInfo info(filename) ;
    path = info.path() ;
    file = info.fileName() ;
    ext = info.suffix() ;

    return (ext.toLower() == "ws" || ext.toLower() == "ws3" || ext.toLower() == "ws4" ||
            ext.toLower() == "ws5" || ext.toLower() == "ws6" || ext.toLower() == "ws7" ||
            ext.toLower() == "ws8" || ext.toLower() == "ws-bak" || ext.toLower() == "ws-$$$");
}


/////////////////////////////////////////////////////////////////////////////
///
/// @param  filename   [IN] - the file to load
///
/// @return bool - true on success, else false
///
/// @brief
/// load the file, with a progress dialog
///
/////////////////////////////////////////////////////////////////////////////
bool cWordstarFile::LoadFile(QString filename)
{
    bool retval = false ;
    mInIndex = false ;
    
    mFile.setFileName(filename) ;
    if(mFile.open(QIODevice::ReadOnly | QIODevice::Text))
    {
        // wordstar is an ascii based protocol, do 1 byte at a time
        qint64 filesize = mFile.size() ;

//        mDocument->SetLoading(true) ;

        QString label ;

        // load a wordstar file from version 4.0 and under
        char inchar ;
        mFile.read(&inchar, 1) ;
        if(inchar != 0x1D)
        {
            label.sprintf("Loading File as WordStar 4.0 or less...") ;
            mFile.seek(0) ;        // back to the beginning of the file
        }
        else        // if the file starts with a 0x1D, then it's a file from version 5.0 or greater
        {
            mFile.read(&inchar, 1) ;
            mFile.read(&inchar, 1) ;
            mFile.read(&inchar, 1) ;
            mFile.read(&inchar, 1) ;
            unsigned char ver = static_cast<unsigned char>(inchar) ;
            char low = ver & 0x0F ;
            char high = (ver & 0xF0) >> 4 ;

            label.sprintf("Loading File as WordStar %d.%d...", high, low) ;

            mFile.seek(0) ;        // back to the beginning of the file
        }

        QProgressDialog progress(label, "Cancel", 0, 100, mEditor) ;
        progress.show() ;

        long modulo = filesize / 100 ;
        if(modulo == 0)
        {
            modulo = 1 ;
        }

        // WordStar is a 7 bit format, so that's what we read in here.
        int oldpercent = 90 ;
        for(qint64 readloop = 0; readloop < filesize; readloop++)
        {
            int percent =  static_cast<int>(static_cast<double>(readloop) / static_cast<double>(filesize) * 100.0) ;
            if(readloop % modulo == 0)
            {
                QString temp1 ;
                temp1.sprintf("%d %%", percent) ;
                progress.setValue(percent) ;
                oldpercent = percent ;
            }

            mFile.read(&inchar, 1) ;

            if((inchar == static_cast<unsigned char>(STYLE_EOF)) && (mExtendedChar == false))
            {
                QString temp1 ;
                temp1.sprintf("%d %%", 100) ;
                progress.setValue(100) ;
                break ;
            }

            unsigned char c = static_cast<unsigned char>(inchar) ;
            HandleChar(c, static_cast<size_t>(readloop)) ;

            QApplication::processEvents() ;
        }

        mFile.close() ;

//        mDocument->SetLoading(false) ;

        retval = true ;
    }

    return retval ;
}


/////////////////////////////////////////////////////////////////////////////
///
/// @param  filename   [IN] - The file to save to
/// @param  length     [IN] - the length of the file to save (data in buffer)
///
/// @return bool - true on sucess, else false
///
/// @brief
/// save a wordstar formated file in wordstar 7 format
///
/// @todo Highly incomplete
/////////////////////////////////////////////////////////////////////////////
bool cWordstarFile::SaveFile(QString filename, POSITION_T length)
{
    bool retval = false ;

    mFile.setFileName(filename) ;
    if(mFile.open(QIODevice::WriteOnly | QIODevice::Text))
    {
        uint32_t stylecounter = 0 ;

        // write the WordStar 7.0d header
        sSeqIntro intro ;
        sSeqClose close ;

        sWSHeader header ;
        memset(&header, 0, sizeof(header)) ;

        intro.start = 0x1d ;
        intro.size = 125 ;
        intro.type = 0 ;

        close.size = 125 ;
        close.finish = 0x1d ;

        header.version = 0x70 ;
        sprintf(header.driver, "HP4  ") ;
        header.styles = static_cast<unsigned int>(length) ;

        mFile.write(reinterpret_cast<char *>(&intro), sizeof(sSeqIntro)) ;
        mFile.write(reinterpret_cast<char *>(&header), sizeof(sWSHeader)) ;
        mFile.write(reinterpret_cast<char *>(&close), sizeof(sSeqClose)) ;

        stylecounter += sizeof(sWSHeader) + sizeof(sSeqIntro) + sizeof(sSeqClose) ;

        // go through the buffer
        for(POSITION_T loop = 0; loop < length; loop++)
        {
            // write out the standard character
            string ch = mDocument->GetChar(loop) ;
            char ch1 = ch[0] ;
            if(ch.length() == 1)
            {
                switch(ch[0])
                {
                    case 13 : // HARD_RETURN :
                        // convert hard returns to CR/LF pairs
                        ch1 = 13 ;
                        mFile.write(&ch1, 1) ;
                        ch1 = 10 ;
                        mFile.write(&ch1, 1) ;
                        stylecounter += 2 ;
                        break ;

                    case STYLE_TAB :
                        {
                            sWSTab tab ;

                            tab = mDocument->GetTab(loop) ;

                            intro.size = 10 ;
                            intro.type = eSequence::SEQ_TAB ;

                            close.size = 10 ;

                            mFile.write(reinterpret_cast<char *>(&intro), sizeof(sSeqIntro)) ;
                            mFile.write(reinterpret_cast<char *>(&tab), sizeof(sWSTab)) ;
                            mFile.write(reinterpret_cast<char *>(&close), sizeof(sSeqClose)) ;

                            stylecounter += sizeof(sWSTab) + sizeof(sSeqIntro) + sizeof(sSeqClose) ;
                        }
                        break ;

                    case STYLE_INTERNAL_COLOR :
                        {
                            sWSColor color ;

                            if(mDocument->GetColor(loop, color) == true)
                            {
                                intro.size = sizeof(sWSColor) + sizeof(sSeqClose) + 1 ;
                                intro.type = SEQ_COLOR ;

                                close.size = intro.size ;

                                mFile.write(reinterpret_cast<char *>(&intro), sizeof(sSeqIntro)) ;
                                mFile.write(reinterpret_cast<char *>(&color), sizeof(sWSColor)) ;
                                mFile.write(reinterpret_cast<char *>(&close), sizeof(sSeqClose)) ;
                            }
                            stylecounter += sizeof(sWSColor) + sizeof(sSeqIntro) + sizeof(sSeqClose) ;
                        }
                        break ;

                    case STYLE_FONT1 :
                        {
                            sInternalFonts font ;
    //                        sInternalFonts prevfont ;

                            sWSFont wsfont ;

                            if(mDocument->GetFont(loop, font) == true)
                            {
                                intro.size = sizeof(sWSFont) + sizeof(sSeqClose) + 1 ;
                                intro.type = eSequence::SEQ_FONT ;

                                close.size = intro.size ;

                                // if we have a wordstar font name in here, we have a wordstar font structure
                                if(font.name.length() != 0)
                                {
                                    wsfont = font.wsfont ;
                                }

                                // no wordstar font name, no wordstar structure... create one
                                else
                                {
                                    std::bitset<16> style ;

                                    // set the font family
                                    switch(font.font.styleHint())
                                    {
                                        case QFont::SansSerif :
                                            style.set(11, 0) ;
                                            style.set(10, 0) ;
                                            style.set(15, 1) ;                  // proportional or not
                                            break ;

                                        case QFont::Serif :
                                            style.set(11, 0) ;
                                            style.set(10, 1) ;
                                            style.set(15, 1) ;                  // proportional or not
                                            break ;

                                        case QFont::Cursive :
                                            style.set(11, 1) ;
                                            style.set(10, 0) ;
                                            style.set(15, 1) ;                  // proportional or not
                                            break ;

                                        case QFont::TypeWriter :
                                            style.set(11, 0) ;
                                            style.set(10, 0) ;
                                            style.set(15, 0) ;                  // proportional or not
                                            break ;

                                        default :
                                            style.set(11, 1) ;
                                            style.set(10, 1) ;
                                            style.set(15, 1) ;                  // proportional or not
                                            break ;
                                    }

                                    // set the font encode
    //                                switch(encoding)
    //                                {
    //                                    case QFontENCODING_CP437 :
                                            style.set(13, 0) ;
                                            style.set(12, 0) ;
    //                                        break ;
    //
    //                                    case QFontENCODING_CP850 :
    //                                        style.set(13, 0) ;
    //                                        style.set(12, 1) ;
    //                                        break ;
    //
    //                                    default :
    //                                        style.set(13, 0) ;
    //                                        style.set(12, 0) ;
    //                                        break ;
    //                                }

                                    // set the font typestyle.set
                                    // @todo FONTS
                                    style.set(8, 1) ;
                                    style.set(7, 1) ;
                                    style.set(6, 1) ;
                                    style.set(5, 1) ;
                                    style.set(4, 1) ;
                                    style.set(3, 1) ;
                                    style.set(2, 1) ;
                                    style.set(1, 1) ;
                                    style.set(0, 1) ;

                                    wsfont.style = style.to_ulong() ;
                                    wsfont.height = font.font.pointSize() * 20 ;
                                }
                                mFile.write((char *)&intro, sizeof(sSeqIntro)) ;
                                mFile.write((char *)&wsfont, sizeof(sWSFont)) ;
                                mFile.write((char *)&close, sizeof(sSeqClose)) ;

                                stylecounter += sizeof(sWSColor) + sizeof(sSeqIntro) + sizeof(sSeqClose) ;
                            }
                        }
                        break ;

                    case STYLE_EOF :
                        loop = length ;  // get out of for loop
                        break ;

                    default :
                    {
                        bool ext = false ;

                        // check if this is a extended char.
                        if(static_cast<unsigned long>(ch[0]) < 32 || static_cast<unsigned long>(ch[0]) > 126)
                        {
                            cCodePage437 cp ;
                            unsigned char chws = cp.toChar(ch[0]) ;
                            if(chws != 0)
                            {
                                ch = STYLE_EXTSTART ;
                                mFile.write((char *)&ch, 1) ;
                                mFile.write((char *)&chws, 1) ;
                                ch = STYLE_EXTEND ;
                                mFile.write((char *)&ch, 1) ;
                                ext = true ;
                            }
    /*
                            for(int loop = 0; loop < gExtendedSize; loop++)
                            {
                                if(static_cast<unsigned long>(ch) == gCodePage437[loop].utf8char.toLatin1())
                                {
                                    ch = STYLE_EXTSTART ;
                                    mFile.write((char *)&ch, 1) ;
                                    ch = gCodePage437[loop].wordstarchar ;
                                    mFile.write((char *)&ch, 1) ;
                                    ch = STYLE_EXTEND ;
                                    mFile.write((char *)&ch, 1) ;
                                    ext = true ;
                                    break ;
                                }
                            }
    */
                        }

                        if(ext == false)
                        {
                            mFile.write((char *)&ch, 1) ;
                        }
                        stylecounter++ ;
                        break ;
                    }
                }
            }
        }

        long eofsize = 128 - (stylecounter % 128) ;         // buffer end of file to 128 byte marker
        if(eofsize == 0)
        {
            eofsize = 128 ;
        }
        char ch = STYLE_EOF ;
        for(long eofloop = 0; eofloop < eofsize; eofloop++)
        {
            mFile.write(&ch, 1) ;
            stylecounter++ ;
        }

        // rewrite header now that we know style table offset
        mFile.seek(0) ;

        intro.start = 0x1d ;
        intro.size = 125 ;
        intro.type = 0 ;

        close.size = 125 ;
        close.finish = 0x1d ;

        header.version = 0x70 ;
        sprintf(header.driver, "HP4  ") ;
        header.styles = stylecounter ;

        mFile.write((char *)&intro, sizeof(sSeqIntro)) ;
        mFile.write((char *)&header, sizeof(sWSHeader)) ;
        mFile.write((char *)&close, sizeof(sSeqClose)) ;

        retval = true ;
        mFile.close() ;
    }
    return retval ;
}


